<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <TextView
        android:id="@+id/mycart_book_title"
        android:layout_width="184dp"
        android:layout_height="58dp"
        android:layout_alignTop="@+id/book_img"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/book_img"
        android:layout_toRightOf="@+id/book_img"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mycart_book_price"
        android:layout_width="126dp"
        android:layout_height="33dp"
        android:layout_below="@+id/search_book_title"
        android:layout_alignStart="@+id/search_book_title"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="12dp"
        android:layout_toRightOf="@+id/book_img"
        android:text="TextView"
        android:textStyle="bold" />



    <Button
        android:id="@+id/mycart_addtoCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_book_price"
        android:layout_alignStart="@+id/search_book_title"
        android:layout_alignParentRight="true"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:backgroundTint="@color/colorAccent"
        android:text="add to cart"
        android:textColor="@color/white" />



</RelativeLayout>